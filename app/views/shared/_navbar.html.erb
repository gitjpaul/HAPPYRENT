<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="d-flex align-items-start">
      <%= link_to "/cars", class: "navbar-brand" do %>
        <i class="fa-solid fa-car-side" style="font-size: 28px; color: #d10909e8;"></i>
        <span> HappyRent - Peer-to-peer car renting!</span>
      <% end %>
